extends ../base-master
block content

    script(src="/bower_components/tinymce/tinymce.min.js")
    script(src="/bower_components/tinymce/jquery.tinymce.min.js")
    script(src="/js/tinymce-config.js")

    div.header.header-default
    div.main.main-raised
        div.section.section-basic
            div.container-fluid
                form(method="post" action="/articles/create/save")
                    div.row.container
                        div.col-md-4
                            div.form-group  
                                input(type="text", name="articleHeader", placeholder="Header").form-control
                        div.col-md-4
                            div.form-group
                                input(type="text", name="articleSubHeader", placeholder="Subheader").form-control
                        div.col-md-4
                            div.form-group
                                select(name="articleGenre" placeholder="Genre").form-control
                                    option(value="") Избери
                                    option(value="healthy-day-article").form-control Здравословен ден
                                    option(value="injuries-article") Травми и Контузии
                                    option(value="body-article") За Тялото
                                    option(value="vitamins-and-minerals-article") Витамини и минерали
                                    option(value="suplements-article") Хранителни добавки
                                    option(value="herbs-article") Билки
                                    option(value="food-article") Хранене
                                    option(value="exercises-article") Упражнения
                    textarea(name="articleBody")#tinymce