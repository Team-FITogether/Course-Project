extends ../base-master
block content

  script(src="/bower_components/tinymce/tinymce.min.js")
  script(src="/bower_components/tinymce/jquery.tinymce.min.js")
  script(src="/js/tinymce-config.js")

  div.header.header-default
  div.main.main-raised
    div.section.section-basic
      div.container-fluid
        form(method="post" action="/recipes/create/update")
          div.row.container
            div.col-md-4
              div.form-group 
                input(type="hidden" name="recipeId" value="" + recipe._id)
                input(type="text", name="recipeTitle", placeholder="title", value="" + recipe.title).form-control
            div.col-md-4
          textarea(name="recipeBody")#tinymce !{recipe.body}