extends ../base-file-header
block sub
  div.header.header-filter(style="background-image: url('/img/common/fitness-woman-4.jpg');")

  div.main.main-raised
    div.section.section-basic
        div.container-fluid
        if viewBag.error
          .alert.alert-danger
            .container-fluid
              .alert-icon
                i.material-icons error_outline
              button.close(type='button', data-dismiss='alert', aria-label='Close')
                span(aria-hidden='true')
                  i.material-icons clear
              b Error:
              |  #{viewBag.error}
        if viewBag.successMessage
          .alert.alert-success
            .container-fluid
              .alert-icon
                i.material-icons check
              button.close(type='button', data-dismiss='alert', aria-label='Close')
                span(aria-hidden='true')
                  i.material-icons clear
              b Success:
              |  #{viewBag.successMessage}
        block content